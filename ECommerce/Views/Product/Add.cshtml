@using ECommerce
@model ProductAddViewModel

<form asp-action="Add" method="post">
    <div class="form-group">
        <label>Product Name </label>
        <input asp-for=Product.ProductName type="text" class="form-control">
    </div>
    <div class="form-group">
        <label>Unit Price </label>
        <input asp-for=Product.UnitPrice type="number" class="form-control">
    </div>
    <div class="form-group">
        <label>Units InStock</label>
        <input asp-for=Product.UnitsInStock type="number" class="form-control">
    </div>

    <div class="form-group">
        <label for="exampleFormControlSelect1">Example select</label>
        <select asp-for=Product.CategoryId class="form-control">
            @foreach (var item in Model.Categories)
            {
                <option value="@item.CategoryId">@item.CategoryName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <button class="btn btn-primary " type="submit">
            Add Product
        </button>
    </div>
</form>



