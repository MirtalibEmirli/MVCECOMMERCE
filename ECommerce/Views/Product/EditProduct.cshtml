@model ECommerce.Models.EditProductViewModel
@{
}
<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="Product.ProductId" />
    <div class="form-group">
        <label asp-for="Product.ProductName"></label>
        <input type="text" class="form-control" asp-for="Product.ProductName" />
        <span asp-validation-for="Product.ProductName"></span>
    </div>

    <div class="form-group">
        <label>Unit Price </label>
        <input asp-for=Product.UnitPrice type="number" class="form-control">
        <span asp-validation-for="Product.UnitPrice"></span>
    </div>

    <div class="form-group">
        <label>Units InStock</label>
        <input asp-for=Product.UnitsInStock type="number" class="form-control">
        <span asp-validation-for="Product.UnitsInStock"></span>
    </div>

    <div class="form-group">
        <label>Category</label>
        <input asp-for=Product.CategoryId type="text" class="form-control">
        <span asp-validation-for="Product.CategoryId"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary
">Save Changes</button>
    <a asp-action="DeleteProduct" asp-controller="Product" class="btn btn-outline-danger" asp-route-id="@Model.Product.ProductId">DeleteProduct</a>
</form>
