@using ECommerce
@model ProductListViewModel

<div class="row">
    <div class="col-md-2">
        @await Component.InvokeAsync("CategoryList")
    </div>

    <div class="col-md-10">
        <p>
            <a class="btn btn-outline-primary t" asp-action="Add" asp-controller="Product">Create New</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>UnitPrice</th>
                    <th>UnitInStock</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.UnitsInStock</td>
                        <td>
                            <a class="btn btn-xs btn-success">Add To cart</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <product-list-pager current-category="@Model.CurrentCategory"
                            current-page="@Model.CurrentPage"
                            page-count="@Model.PageCount" page-size="@Model.PageSize">

        </product-list-pager>
    </div>
</div>